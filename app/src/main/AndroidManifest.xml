<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dpiki.dreamclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".General">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuItemView"
            android:parentActivityName=".MenuCategoryView" />
        <activity
            android:name=".MenuCategoryView"
            android:parentActivityName=".General" />
        <activity
            android:name=".Debug"
            android:parentActivityName=".General" />

        <service
            android:name=".Network.NetworkService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".General"></activity>
        <activity android:name=".OrderActivity"></activity>
    </application>

</manifest>