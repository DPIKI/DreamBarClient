<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dpiki.dreamclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".InitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".OrderActivity.OrderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Network.NetworkService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity.SettingsActivity"
            android:parentActivityName=".OrderActivity.OrderActivity" />
        <activity
            android:name=".MenuActivity.MenuActivity"
            android:parentActivityName=".OrderActivity.OrderActivity" />

        <receiver
            android:name=".Network.WifiStateChangeReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>