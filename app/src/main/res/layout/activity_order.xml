<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        tools:context=".OrderActivity.OrderActivity">

        <RelativeLayout
            android:id="@+id/ov_order_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tableRow">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/s_button_new_order"
                    android:id="@+id/b_newOrder"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:onClick="onClickNewOrder" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/s_button_send_order"
                    android:id="@+id/b_sendOrder"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:onClick="onClickSendOrder" />
            </TableRow>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/lv_orders"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tableRow"
                android:choiceMode="singleChoice" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ov_pb_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/ov_progress_bar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Подключаемся"
                android:id="@+id/ov_pb_text_view"
                android:layout_below="@+id/ov_progress_bar"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ov_disconnected_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Сервис отключен"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ov_disconnected_text_view" />

            <Button
                android:text="ВКЛЮЧИТЬ"
                android:onClick="onClickTurnServiceOn"
                android:layout_below="@+id/ov_disconnected_text_view"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/ov_wrong_password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Неверный пароль"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ov_wrong_password_text_view" />

            <Button
                android:text="ИЗМЕНИТЬ"
                android:onClick="onClickChangePassword"
                android:layout_below="@+id/ov_wrong_password_text_view"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
